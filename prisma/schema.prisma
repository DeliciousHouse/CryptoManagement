generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url removed - now configured in prisma/config.ts
}

model Scenario {
  id          String   @id @default(cuid())
  name        String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Calculator inputs (JSON for flexibility)
  calculatorData Json

  // Site planner inputs (JSON)
  plannerData    Json

  @@index([createdAt])
}

