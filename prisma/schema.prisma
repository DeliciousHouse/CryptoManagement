generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url removed - now configured in prisma.config.ts
}

model Scenario {
  id          String   @id @default(cuid())
  name        String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Calculator inputs (JSON for flexibility)
  calculatorData Json

  // Site planner inputs (JSON)
  plannerData    Json

  @@index([createdAt])
}

model User {
  id                     String   @id @default(cuid())
  email                  String   @unique
  name                   String?
  avatarUrl              String?  @map("avatar_url")
  passwordHash           String?  @map("password_hash")
  oauthProvider          String   @map("oauth_provider")
  oauthProviderUserId    String   @map("oauth_provider_user_id")
  createdAt              DateTime @default(now()) @map("created_at")

  @@unique([oauthProvider, oauthProviderUserId])
}

model MarketSnapshot {
  id            String   @id @default(cuid())
  btcPriceUsd   Float
  difficulty    Float
  blockRewardBtc Float
  createdAt     DateTime @default(now())

  @@index([createdAt])
}
